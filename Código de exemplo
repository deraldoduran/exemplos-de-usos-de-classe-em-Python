class bicicleta:
    def __init__(self, cor, modelo, ano, valor):
        self.cor = cor
        self.modelo = modelo
        self.ano = ano
        self.valor = valor

    def buzinar(self):
        return "Buzina: BEEP BEEP!"

    def pintar(self, nova_cor, novo_valor=100):
        self.cor = nova_cor
        self.valor = novo_valor
        return f"A bicicleta foi pintada de {self.cor}, ent√£o aumentou o seu valor para{self.valor}."
    
    def __str__(self):
        return f"{self.__class__.__name__}: {', '.join(f'{k}={v}' for k, v in self.__dict__.items())}"
# Exemplo de uso da classe bicicleta
minha_bicicleta = bicicleta("vermelha", "mountain bike", 2020, 1500)
print(minha_bicicleta.cor, minha_bicicleta.modelo, minha_bicicleta.ano, minha_bicicleta.valor)
print(minha_bicicleta.buzinar())
print(minha_bicicleta.pintar("azul", 5000))
print(minha_bicicleta)
